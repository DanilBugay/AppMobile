            </intent-filter>
        </activity>
        <activity android:name="com.examples.testproject.login.RestorePasswordActivity" />
        <activity android:name="com.examples.testproject.login.RegisterActivity" />
        <activity android:name="com.examples.testproject.login.LoginResult" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.examples.anhelinastrelina.login.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
