            android:name="com.examples.testproject.file.UploadingActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.examples.testproject.file.BrowseActivity" />
        <activity android:name="com.examples.testproject.login.HelloActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

